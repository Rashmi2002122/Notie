<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Document</title>

    <script src="https://cdn.tailwindcss.com"></script>
  </head>
  <body>
    <div class="main w-full min-h-screen bg-zinc-900">
      <div class="form p-10 text-white">
        <form action="/create" method="post">
          <input
            class="block px-5 py-2 bg-zinc-800 rounded-md w-full"
            placeholder="Enter the book name"
            name="title"
          />
          <textarea
            mt-2
            class="block w-full px-5 py-2 mt-2 rounded-md resize-none bg-zinc-800"
            placeholder="Enter some detail"
            name="detail"
          ></textarea>

          <input class="mt-2 bg-blue-500 px-5 py-2" type="submit" />
        </form>
      </div>
      <div class="tasks p-10 flex gap-3 flex-wrap">
        <% if(files.length >0){ %> <% files.forEach(function(val){ %>
        <div class="task w-72 px-3 py-4 rounded-md bg-zinc-800">
          <h1 class="text-white text-2xl tracking-tighter"><%=val%></h1>
          <div class="flex w-full justify-between item-center mt-2">
            <a class="text-blue-500 inline-block mt-2" href="/files/<%=val%>"
              >Read more..
            </a>
            <a class="px-10 text-red-300" href="/edit/<%=val%>">edit</a>
          </div>
        </div>
        <% }) %> <%} else { %>
        <h3>No book available</h3>
        <%}%>
      </div>
    </div>
  </body>
</html>
